{% macro ceph_ipaddr(ipa, suffix="", f=None) -%}
      {%- if ipa == '' -%}
      {%- else -%}
      {%- if f != None -%}
      {%- set ipa=ipa | ipaddr(f) | first -%}
      {%- endif -%}
      {%- if ip_version == 'ipv4' -%}
        {{ ipa }}{{ suffix }}
      {%- elif ip_version == 'ipv6' -%}
        [{{ ipa }}]{{ suffix }}
      {%- endif -%}
      {%- endif -%}
{%- endmacro %}
{% macro ceph_ipaddr2(ipa, suffix="") -%}
      {%- if ip_version == 'ipv4' -%}
        {{ ipa['address'] }}{{ suffix }}
      {%- elif ip_version == 'ipv6' -%}
        [{{ ipa[0]['address'] }}]{{ suffix }}
      {%- endif -%}
{%- endmacro %}

